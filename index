    <div id="status-bar">
        <span>CORE: CLOUDFLARE WORKER</span>
        <div style="display:flex; align-items:center; gap:8px;">
            <span>ONLINE</span>
            <div class="status-light"></div>
        </div>
    </div>

    <script>
        // ----------------------------------------------------
        // CONFIGURATION: YOUR WORKER URL
        // ----------------------------------------------------
        const WORKER_URL = "https://titan-core.saliljha523.workers.dev/";

        let player;
        let playlist = [];
        let currentIndex = 0;

        // 1. Initialize YouTube Player
        function onYouTubeIframeAPIReady() {
            player = new YT.Player('player-embed', {
                height: '100%',
                width: '100%',
                playerVars: {
                    'autoplay': 1,
                    'controls': 1,
                    'rel': 0,
                    'fs': 1,
                    'playsinline': 1
                },
                events: {
                    'onStateChange': onPlayerStateChange
                }
            });
        }

        // 2. The Search Function (Connects to YOUR Worker)
        async function search() {
            const query = document.getElementById('query').value.trim();
            if (!query) return;

            const queueDiv = document.getElementById('queue');
            queueDiv.innerHTML = '<div style="padding:20px;text-align:center;color:#00f2ea;">Scanning Neural Network...</div>';

            try {
                // Fetch from your new Cloudflare Worker
                const response = await fetch(`${WORKER_URL}?q=${encodeURIComponent(query)}`);
                const data = await response.json();

                if (data.items && data.items.length > 0) {
                    playlist = data.items;
                    currentIndex = 0;
                    renderQueue();
                    // Load the first song automatically
                    loadTrack(0);
                } else {
                    queueDiv.innerHTML = '<div style="padding:20px;text-align:center;color:#ff4444;">No Audio Found via Uplink.</div>';
                }

            } catch (error) {
                console.error(error);
                queueDiv.innerHTML = '<div style="padding:20px;text-align:center;color:#ff4444;">Connection Error.<br>Check Worker Deployment.</div>';
            }
        }

        // 3. Render the List
        function renderQueue() {
            const queueDiv = document.getElementById('queue');
            queueDiv.innerHTML = playlist.map((track, index) => `
                <div class="track ${index === currentIndex ? 'active' : ''}" onclick="loadTrack(${index})">
                    <img src="${track.thumbnail}" loading="lazy">
                    <div class="track-info">
                        <div class="track-title">${track.title}</div>
                    </div>
                </div>
            `).join('');
        }

        // 4. Load a Track
        function loadTrack(index) {
            currentIndex = index;
            if (player && player.loadVideoById) {
                player.loadVideoById(playlist[index].id);
            }
            renderQueue(); // Update active highlight
            
            // Update Title (Mobile Support)
            if ('mediaSession' in navigator) {
                navigator.mediaSession.metadata = new MediaMetadata({
                    title: playlist[index].title,
                    artist: 'Titan Max',
                    artwork: [{ src: playlist[index].thumbnail }]
                });
            }
        }

        // 5. Auto-Play Next Song
        function onPlayerStateChange(event) {
            if (event.data === YT.PlayerState.ENDED) {
                if (currentIndex < playlist.length - 1) {
                    loadTrack(currentIndex + 1);
                }
            }
        }

        // 6. Controls
        function togglePlay() {
            const state = player.getPlayerState();
            if (state === 1) player.pauseVideo();
            else player.playVideo();
        }
        function toggleMute() {
            if (player.isMuted()) player.unMute();
            else player.mute();
        }
        function toggleFull() {
            const el = document.getElementById('player-wrapper');
            if (!document.fullscreenElement) el.requestFullscreen();
            else document.exitFullscreen();
        }

    </script>
</body>
